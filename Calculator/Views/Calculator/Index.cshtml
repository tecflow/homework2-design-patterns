@{
    ViewBag.Title = "Calculator";
}

<h2>Calculator</h2>

@using (Html.BeginForm())
{
    <input type="text" name="expression" placeholder="e.g. 5+3" />
    <button type="submit">Calculate</button>
}

@if (ViewBag.Result != null)
{
    <h3>Result: @ViewBag.Result</h3>
}

<h4>History:</h4>
<ul>
@foreach (var record in ViewBag.History)
{
    <li>@record.Timestamp: @record.Expression = @record.Result</li>
}
</ul>
